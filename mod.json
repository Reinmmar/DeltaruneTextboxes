{
    "geode": "3.3.0",
    "gd": {
        "win": "2.206",
        "android": "2.206",
        "mac": "2.206",
        "ios": "2.206"
    },
    "id": "timestepyt.deltarune_textboxes",
    "name": "Deltarune Textboxes",
    "version": "v0.1.0",
    "developer": "TimeStepYT",
    "description": "Makes FLAlertLayers look like textboxes from Deltarune",
    "resources": {
        "fonts": {
            "Determination": {
                "path": "resources/determination-extended.ttf",
                "size": 78
            }
        },
        "sprites": [
            "resources/deltaruneSquare.png",
            "resources/heart.png"
        ]
    },
    "settings": {
        "restrictWidth": {
            "name": "Limit width",
            "type": "bool",
            "default": true,
            "description": "Limits the <cy>textbox width</c> to max width for <cj>16:9</c>"
        },
        "clickToProgress": {
            "name": "Progress by clicking",
            "type": "bool",
            "default": true,
            "description": "Enables you to use <cy>clicking</c> to progress textboxes",
            "platforms": ["win", "macos"]
        }
    }
}
